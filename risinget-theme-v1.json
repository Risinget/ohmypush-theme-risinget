{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "background": "#0E050F",
          "foreground": "#EFDCF9",
          "leading_diamond": "\u256d\u2500\ue0b6",
          "properties": {
            "arch": "\uf303",
            "debian": "\uf306",
            "fedora": "\uf30a",
            "linux": "\uf17c",
            "macos": "\uf179",
            "manjaro": "\uf312",
            "opensuse": "\uf314",
            "ubuntu": "\uf31b",
            "windows": "\uf17a"
          },
          "style": "diamond",
          "template": "{{ if .WSL }}WSL at {{ end }}{{.Icon}} ",
          "type": "os"
        },

        {
          "foreground": "#ffffff",
          "style": "plain",
          "template": " {{ .UserName }} on",
          "type": "text"
        },
{
          "foreground": "#dd266c",
          "properties": {
            "style": "full"
          },
          "style": "powerline",
          "template": " {{ .Path }} ",
          "type": "path"
        },
      
        {
          "foreground": "#ffffff",
          "style": "plain",
          "template": "at",
          "type": "text"
        },

        {
          "foreground": "#dd266c",
          "properties": {
            "time_format": "3:04 PM"
          },
          "style": "plain",
          "template": " \uf017 {{ .CurrentDate | date .Format }} ",
          "type": "time"
        },

        {
          "foreground": "#ffffff",
          "style": "plain",
          "template": "via",
          "type": "text"
        },
        
        {
          "foreground": "#dd266c",
          "powerline_symbol": "\ue0b0",
          "properties": {
            "display_mode": "files",
            "fetch_virtual_env": false
          },
          "style": "plain",
          "template": " \ue235 {{ if .Error }}{{ .Error }}{{ else }}{{ .Full }}{{ end }} ",
          "type": "python"
        }
      ],
      "type": "prompt"
    },
    
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "foreground": "#ad2c5d",
          "style": "plain",
          "template": "\u2570\u2500",
          "type": "text"
        },
        {
          "foreground": "#e0f8ff",
          "foreground_templates": ["{{ if gt .Code 0 }}#ef5350{{ end }}"],
          "properties": {
            "always_enabled": true
          },
          "style": "plain",
          "template": "\ueab6 ",
          "type": "status"
        }
      ],
      "type": "prompt"
    }
  ],
  "version": 2
}
